extends layout

block opengraph
  meta(property='og:title', content='ISS Tracker')
  meta(property='og:url', content='https://iss-tracker.tk')
  meta(property='og:description', content='View live data of the International Space Station and its location on an interactive map')
  
  meta(property='og:image', content='https://iss-tracker.tk/images/open_graph_image.jpg')
  meta(property='og:image:secure_url', content='https://iss-tracker.tk/images/open_graph_image.jpg')
  meta(property='og:image:type', content='image/jpeg')
  meta(property='og:image:width', content='500')
  meta(property='og:image:height', content='200')
  meta(property='og:image:alt', content='International Space Station')
  

block bodycontent
  // MAP OBJECT
  #map.mapclass
  
  // STATISTICS, ASTRONAUTS, IMAGE OF THE DAY
  .container
    .row
      .col-sm-12.col-md-4.col-lg-3
        // STATISTICS
        .card.mt-2.mb-3
          h5.card-header.text-center Statistics
          .card-body
            ul.statistics-list
              li#issLocationLat Latitude:
              li#issLocationLong Longitude: 
              li#issAltitude Altitude:
              li#issVelocity Velocity: 
              li#issHeading Heading: 
              li#issLocationTimestamp Timestamp: 
            a#issLocationButton.btn.btn-primary(href='#') Focus
          .card-footer.text-center
            small.text-muted Updates every 2 seconds
        // ASTRONAUTS LIST
        .card.mt-3.mb-3
          h5.card-header.text-center Astronauts
          .card-body
            ul.astronaut-list
              li Oleg Kononenko
              li David Saint-Jacques
              li Anne McClain
              li Alexey Ovchinin
              li Nick Hague
              li Christina Koch
        // SHARE SOCIAL MEDIA
        .card.mt-3.mb-3
          h5.card-header.text-center Share
          .card-body.text-center
            a.btn.btn-primary.m-1(href="https://www.facebook.com/sharer/sharer.php?u=https%3A//iss-tracker.tk", target="_blank") 
              i.fa.fa-facebook
            //- a.btn.btn-primary.m-1(href="https://twitter.com/intent/tweet/?text=Hello%20mah%20boi&amp;url=https%3A%2F%2Fiss-tracker.tk", target="_blank") 
            //-   i.fa.fa-twitter
            //- a.btn.btn-primary.m-1(href="https://www.linkedin.com/shareArticle?mini=true&url=https%3A//iss-tracker.tk&title=ISS%20Tracker&summary=View%20live%20data%20of%20the%20International%20Space%20Station%20on%20an%20interactive%20map&source=", target="_blank") 
            //-   i.fa.fa-linkedin
        
      // DAILY ISS IMAGE
      .col-sm-12.col-md-8.col-lg-9
        .card.mt-2.mb-3
          h5.card-header.text-center Image of the Day
          img.card-img-top(src= IOTDurl, alt= IOTDtitle)
          .card-body
            h5.card-title= IOTDtitle
            p.card-text
              = IOTDdescription
            p.card-text
              small.text-muted= IOTDlastupdate 
              small.text-muted  Â© 
              small.text-muted= IOTDcopyright
              
      
  
block localjavascript
  script(type='text/javascript', src='/javascripts/isstracker.js')
